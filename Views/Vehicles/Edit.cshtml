@model RentalCar.Models.Vehicle

@{
    ViewData["Title"] = "Editar Veículo";
}

<h1 class="mb-4 text-danger fw-bold">Editar Veículo</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Marca" class="form-label fw-semibold"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Modelo" class="form-label fw-semibold"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Matricula" class="form-label fw-semibold"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="AnoFabricacao" class="form-label fw-semibold"></label>
                <input asp-for="AnoFabricacao" class="form-control" />
                <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="Combustivel" class="form-label fw-semibold"></label>

                <select asp-for="Combustivel" class="form-control">
                    <option value="">-- Selecione --</option>
                    <option value="Gasolina">Gasolina</option>
                    <option value="Gasoleo">Gasóleo</option>
                    <option value="Hidrogénio">Hidrogénio</option>
                    <option value="Elétrico">Elétrico</option>
                </select>

                <span asp-validation-for="Combustivel" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success px-4">Guardar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
