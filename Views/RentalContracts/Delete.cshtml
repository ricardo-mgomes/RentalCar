@model RentalCar.Models.RentalContract

@{
    ViewData["Title"] = "Apagar Contrato";
}

<h1>Apagar Contrato</h1>

<h3>Tens a certeza que queres apagar este contrato?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Client.NomeCompleto</dd>

        <dt class="col-sm-3">Veículo</dt>
        <dd class="col-sm-9">@Model.Vehicle.Matricula</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Apagar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
