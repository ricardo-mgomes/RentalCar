@model RentalCar.Models.RentalContract

@{
    ViewData["Title"] = "Novo Contrato";
}

<h1 class="mb-4 text-danger fw-bold">Novo Contrato de Aluguer</h1>

<div class="card shadow-sm p-4">

    <form asp-action="Create">

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="ClientId" class="form-label fw-semibold"></label>
                <select asp-for="ClientId" class="form-select" asp-items="ViewBag.Clients">
                    <option value="">-- Selecione --</option>
                </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="VehicleId" class="form-label fw-semibold"></label>
                <select asp-for="VehicleId" class="form-select" asp-items="ViewBag.Vehicles">
                    <option value="">-- Selecione --</option>
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="DataInicio" class="form-label fw-semibold"></label>
                <input asp-for="DataInicio" class="form-control" type="date" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DataFim" class="form-label fw-semibold"></label>
                <input asp-for="DataFim" class="form-control" type="date" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="QuilometragemInicial" class="form-label fw-semibold"></label>
            <input asp-for="QuilometragemInicial" class="form-control" />
            <span asp-validation-for="QuilometragemInicial" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success px-4">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Voltar</a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
