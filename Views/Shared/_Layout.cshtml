@{
    var appName = "RentalCar";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@appName - @ViewData["Title"]</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>

        .app-title {
            font-size: 1.4rem;
            font-weight: 800;
            color: #c40000;
            margin-right: 2rem;
            white-space: nowrap;
        }

        .navbar-custom {
            background-color: #ffffff;
            padding: 0.5rem 2rem;
        }

            .navbar-custom .nav-link {
                color: #c40000;
                font-weight: 600;
                margin: 0 0.5rem;
            }

                .navbar-custom .nav-link:hover {
                    color: #ff4d4d;
                }

        .navbar-logo {
            height: 50px;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container-fluid">

                <span class="app-title">@appName</span>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Clients" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Vehicles" asp-action="Index">Veículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="RentalContracts" asp-action="Index">Contratos</a>
                        </li>
                    </ul>
                </div>

                <a class="navbar-brand ms-3" asp-controller="Home" asp-action="Index">
                    <img src="~/grupo_jap.png" alt="Grupo JAP" class="navbar-logo" />
                </a>

            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4 py-3">
        <div class="container text-center">
            © @DateTime.Now.Year - @appName
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
