@model RentalCar.Models.Client

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="mb-4 text-danger fw-bold">Editar Cliente</h1>

<div class="card shadow-sm p-4">
    <form asp-action="Edit">

        <input type="hidden" asp-for="Id" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NomeCompleto" class="form-label fw-semibold"></label>
                <input asp-for="NomeCompleto" class="form-control" />
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="Telefone" class="form-label fw-semibold"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="col-md-6 d-flex align-items-center mt-3">
                <div class="form-check">
                    <input asp-for="CartaConducao" class="form-check-input" />
                    <label asp-for="CartaConducao" class="form-check-label fw-semibold ms-2"></label>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success px-4">Guardar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
